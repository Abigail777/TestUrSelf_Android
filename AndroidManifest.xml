<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supinfo.testurself"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/test_ur_self_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        
         >
        <activity
            android:name="com.supinfo.testurself.activity.MainLoadActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:screenOrientation="portrait"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.supinfo.testurself.activity.ListPackageActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.supinfo.testurself.activity.SettingsActivity"
            android:theme="@android:style/Theme.Light"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.supinfo.testurself.activity.QuizzActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.supinfo.testurself.Quizzs"
            android:label="@string/title_activity_quizzs"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.supinfo.testurself.activity.ListQuizzActivity"
            android:label="@string/title_activity_quizzs"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait"
             >
        </activity>
        <activity
            android:name="com.supinfo.testurself.activity.FinishedQuizzActivity"
            android:label="@string/title_activity_finished_quizz" 
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait"
             >
        </activity>
    </application>

</manifest>